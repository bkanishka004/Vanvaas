<!DOCTYPE html>
<html>
<head>
    <title>Vanvaas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container py-5">
    <h1 class="text-center mb-4">Welcome to Vanvaas</h1>

    <div class="text-center mb-4">
        <a href="/register" class="btn btn-primary me-2">Register</a>
        <a href="/login" class="btn btn-success me-2">Login</a>
        <a href="/camps/new" class="btn btn-warning">Add Camp</a>
    </div>

    <hr>

    <h3 class="mb-3">Available Camps</h3>

    <ul class="list-group">
        <% camps.forEach(function(camp) { %>
            <li class="list-group-item">
                <strong><%= camp.title %></strong> - <%= camp.location %>
            </li>
        <% }) %>
    </ul>
</div>

</body>
</html>
